$(document).ready(function() {

    $.ajaxSetup({cache: false})

    chat = $('#chat');
    chat.jScrollPane();
    chat[0].scrollTo(chat.data('jScrollPaneMaxScroll'));

    setInterval(
        function() {
            chat.load('<?php echo url('~/chat/poll'); ?>', function() {
                chat.jScrollPane();
            });
        },
        1250
    );

    $('#chat-form').submit(
        function() {
            $.post('<?php echo url('~/chat'); ?>', $(this).serialize());
            $('#chatmessage').val('').focus();
            return false;
        }
    );

    $('.smiley').click(function() {
        $('#chatmessage').val($.trim($('#chatmessage').val() + ' ' + $(this).attr('title')) + ' ').focus();
        return false;
    });

    $('.smiley').qtip({
        show: 'mouseover',
        hide: 'mouseout',
        position: {
            corner: {
                target: 'topRight',
                tooltip: 'bottomLeft'
            }
        }
    });
});
</script>
